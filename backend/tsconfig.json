{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}


